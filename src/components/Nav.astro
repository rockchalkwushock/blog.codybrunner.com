---
import type { Props as NavItemProps } from './NavItem.astro'
import { twMerge } from 'tailwind-merge'
import List from './List.astro'
import NavItem from './NavItem.astro'
import { LINKS, ROUTES } from '@config'

const { github, linkedin, meet, twitter } = LINKS
const { blog, bookshelf, home, portfolio, resume, uses } = ROUTES

/**
 * This Navigation Implementation was taken from:
 * - https://www.kevinzunigacuellar.com/
 * - https://github.com/kevinzunigacuellar/kevinzunigacuellar.com
 * Hats of to @kevinzunigacuellar for the initial design
 * idea it was dope! I repurposed the degsin and expanded upon it
 * in my own site.
 */
const navigation: Array<NavItemProps> = [
	{
		iconLabel: 'Home Icon.',
		iconName: 'home',
		linkLabel: 'Link to Home Page.',
		to: home,
	},
	{
		iconLabel: 'Book Icon.',
		iconName: 'blog',
		linkLabel: 'Link to Blog Page.',
		to: blog,
	},
	{
		iconLabel: 'Books Icon.',
		iconName: 'bookShelf',
		linkLabel: 'Link to Book Shelf Page.',
		to: bookshelf,
	},
	{
		iconLabel: 'Git Branch Icon.',
		iconName: 'portfolio',
		linkLabel: 'Link to Portfolio Page.',
		to: portfolio,
	},
	{
		iconLabel: 'Tools Icon.',
		iconName: 'uses',
		linkLabel: 'Link to Uses Page.',
		to: uses,
	},
	{
		iconLabel: 'Resume Icon.',
		iconName: 'cv',
		isExternal: true,
		linkLabel: "Link to Cody Brunner's Resume.",
		to: resume,
	},
	{
		iconLabel: 'Calendar Icon.',
		iconName: 'schedule',
		isExternal: true,
		linkLabel: "Link to Cody Brunner's Appointlet Booking Page.",
		to: meet,
	},
	{
		iconLabel: 'GitHub Icon.',
		iconName: 'github',
		isExternal: true,
		linkLabel: "Link to Cody Brunner's GitHub Account.",
		to: github,
	},
	// {
	// 	iconLabel: 'Instagram Icon.',
	// 	iconName: 'instagram',
	// 	isExternal: true,
	// 	linkLabel: "Link to Cody Brunner's Instagram Account.",
	// 	to: instagram,
	// },
	{
		iconLabel: 'LinkedIn Icon.',
		iconName: 'linkedIn',
		isExternal: true,
		linkLabel: "Link to Cody Brunner's LinkedIn Account.",
		to: linkedin,
	},
	{
		iconLabel: 'Twitter Icon.',
		iconName: 'twitter',
		isExternal: true,
		linkLabel: "Link to Cody Brunner's Twitter Account.",
		to: twitter,
	},
]
const NAV_BASE_STYLES = ['bottom-0', 'pb-6', 'sticky']
const UL_BASE_STYLES = [
	'bg-aura-purple-fading/100',
	'flex',
	'flex-row',
	'items-center',
	'max-w-xs',
	'mx-auto',
	'overflow-x-scroll',
	'p-2',
	'rounded-lg',
	'shadow-2xl',
	'space-x-3',
	'sm:max-w-lg',
	'sm:p-4',
	'md:max-w-2xl',
	'md:rounded-2xl',
	'lg:hidden',
]

const firstLinks = navigation.slice(0, 5)
const socialLinks = navigation.slice(5)
const navStyles = twMerge(NAV_BASE_STYLES)
const ulStyles = twMerge(UL_BASE_STYLES)
---

<nav class={navStyles}>
	<List class={ulStyles} kind='unordered'>
		{firstLinks.map(props => <NavItem {...props} />)}
		<hr class='h-16 border-l-2 border-aura-purple-fading' />
		{socialLinks.map(props => <NavItem {...props} />)}
	</List>
</nav>
