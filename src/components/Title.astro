---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

export interface Props extends HTMLAttributes<'h1'> {}

const BASE_STYLES = ['text-aura-purple', 'font-bold', 'text-4xl', 'text-center']

const { class: cls, ...rest } = Astro.props
const styles = twMerge(BASE_STYLES, cls)
---

<h1 {...rest} class={styles}>
	<slot />
</h1>
