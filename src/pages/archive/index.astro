---
import { getCollection } from 'astro:content'

import Article from '~/components/article.astro'
import Head from '~/components/head.astro'
import Link from '~/components/link.astro'
import Section from '~/components/section.astro'
import SimpleLayout from '~/components/simple-layout.astro'
import BaseLayout from '~/layouts/base-layout.astro'

import { createArchivedMap, isArchived } from '~/utils/helpers'

const articles = await getCollection('articles', article => {
	return isArchived(article)
})

const archivedMap = createArchivedMap(articles)
---

<BaseLayout>
	<!-- TODO: Update SEO -->
	<Head slot='metadata' />
	<SimpleLayout intro='The collection of all the posts I have made since starting my blog in 2017.' slot='content' title='Archive'>
		<div class='flex mb-8'>
			<Link
				aria-label='Go to Articles.'
				class='bg-primary-50 flex items-center gap-2 px-3 py-2 rounded-lg scale-95 transition dark:bg-primary-800/50 hover:scale-100 hover:bg-primary-200 dark:hover:bg-primary-700'
				href='/'
			>
				<span>←</span>
				<span>Articles</span>
			</Link>
		</div>
		<div class='flex flex-col gap-20'>
			{
				Object.entries(archivedMap).map(([year, { articles }]) => (
					<Section id={year} title={year}>
						<ul class='flex flex-col gap-16' role='list'>
							{articles.map(({ data: article, slug }) => (
								<Article article={article} slug={slug} />
							))}
						</ul>
					</Section>
				))
			}
		</div>
		<div class='flex mt-16'>
			<Link
				aria-label='Go to Articles.'
				class='bg-primary-50 flex items-center gap-2 px-3 py-2 rounded-lg scale-95 transition dark:bg-primary-800/50 hover:scale-100 hover:bg-primary-200 dark:hover:bg-primary-700'
				href='/'
			>
				<span>←</span>
				<span>Articles</span>
			</Link>
		</div>
	</SimpleLayout>
</BaseLayout>
