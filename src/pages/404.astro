---
import { Image } from 'astro:assets'
// Assest
import notFound from '~/assets/page-not-found.svg'
// Components
import Container from '~/components/container.astro'
import Head from '~/components/head.astro'
import Link from '~/components/link.astro'
import BaseLayout from '~/layouts/base-layout.astro'
---

<BaseLayout>
	<Head
		description="Oops! Looks like you are lost."
		slot='metadata'
		title="Not Found"
	/>
	<Container class='mt-9' slot='content'>
		<div class='flex flex-col items-center gap-10'>
			<h1 class='text-center font-display text-4xl'>Oops! Looks like you are lost.</h1>
			<Image
				alt="Page Not Found"
				class='max-h-fit max-w-md'
				src={notFound}
			/>
			<Link
				aria-label="Go to homepage"
				class='rounded-md border border-accent-600 px-5 py-1.5 shadow-md shadow-accent-50 transition duration-300 hover:scale-95 hover:bg-accent-600 hover:text-white hover:shadow-none dark:border-accent-400 dark:text-accent-400 dark:shadow-accent-700 dark:hover:bg-accent-400 dark:hover:text-primary-800'
				href="https://codybrunner.com"
			>
				Back to Home Page
			</Link>
		</div>
	</Container>
</BaseLayout>
